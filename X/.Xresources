! urxvt
URxvt.geometry:                    74x27
URxvt*buffered: true
URxvt*cursorBlink: true
URxvt*underlineColor: yellow
URxvt.font:                        xft:DejaVu Sans Mono for Powerline:size=14
URxvt.boldFont:                    xft:DejaVu Sans Mono for Powerline:size=14
URxvt*depth: 32
URxvt*borderless: 1
URxvt*scrollBar: false
URxvt*loginShell: true
Urxvt*secondaryScroll:  true    # Enable Shift-PageUp/Down in screen
URxvt*saveLines: 5000
URxvt*termName: rxvt-unicode
URxvt.urlLauncher: firefox
URxvt.matcher.button: 1

URxvt.perl-ext-common: default,tabbed,matcher,resize-font,-tabbed
URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-plus:      resize-font:bigger
URxvt.keysym.C-equal:     resize-font:reset
URxvt.keysym.C-question:  resize-font:show
URxvt.iso14755: false
URxvt.iso14755_52: false

! XTerm
XTerm*locale: true
Xterm*saveLines: 4096
xterm*VT100.geometry: 80x32
xterm*faceName: Liberation Mono:size=15:antialias=false
xterm*font: 7x13

#define S_dark_black         #001a21
#define S_dark_red           #b81916
#define S_dark_green         #00ab00
#define S_dark_yellow        #a8830e
#define S_dark_blue          #1629f7
#define S_dark_magenta       #3a2a9d
#define S_dark_cyan          #339bff
#define S_dark_white         #cccccc

#define S_light_black        #073642
#define S_light_red          #ff0400
#define S_light_green        #00ff00
#define S_light_yellow       #ffeb00
#define S_light_blue         #3093ff
#define S_light_magenta      #a46fff
#define S_light_cyan         #58adff
#define S_light_white        #ffffff

*background:            S_dark_black
*foreground:            S_light_yellow
*cursorColor:           S_light_cyan
*pointerColorBackground:S_light_green
*pointerColorForeground:S_light_cyan

